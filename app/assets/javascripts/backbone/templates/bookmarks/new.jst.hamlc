.row

  %form.form-horizontal
    %fieldset
      %legend
        New Bookmark

      .control-group
        %label.control-label Url:
        .controls
          %input.input-large{:type => "text", :name => 'url', :value => dpm.BsApp.url }
      .control-group
        %label.control-label Title:
        .controls
          %input.input-large{:type => "text", :name => 'title', :value => dpm.BsApp.title, :placeholder => 'Title' }
      .control-group
        %label.control-label Description:
        .controls
          %textarea{:name => 'notes', :placeholder => 'Enter Brief Description', :value => dpm.BsApp.description}
      .control-group
        %label.control-label Tags:
        .controls
          %textarea.input-large{:type => "text", :name => 'tags', :value => dpm.BsApp.tags, :placeholder => 'comma dilem' }


      .action-bar
        .btn.btn-success.btn-large#new-bookmark{:href=>'#'}
          %i.icon-check.icon-white
          Save
        .btn.btn-large#save{:href=>'#'}
          %i.icon-ban-circle
          Cancel